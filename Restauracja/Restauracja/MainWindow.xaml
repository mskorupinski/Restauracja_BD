<Window x:Class="Restauracja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restauracja"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Glowny">
        <Grid x:Name="Logowanie" HorizontalAlignment="Left" Height="311" Margin="1,0,0,0" VerticalAlignment="Top" Width="240">
            <Label x:Name="Login" Content="Login:" HorizontalAlignment="Left" Margin="61,104,0,0" VerticalAlignment="Top"/>
            <Label x:Name="Haslo" Content="Hasło:" HorizontalAlignment="Left" Margin="61,163,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="Text_Logowanie" HorizontalAlignment="Left" Height="23" Margin="78,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <PasswordBox x:Name="Text_Haslo" HorizontalAlignment="Left" Margin="78,194,0,0" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="Zaloguj_Sie" Content="Zaloguj się" HorizontalAlignment="Left" Margin="87,231,0,0" VerticalAlignment="Top" Width="75" Click="Zaloguj_Sie_Click"/>
        </Grid>
        <Grid x:Name="Panel" HorizontalAlignment="Left" Height="286" Margin="276,25,0,0" VerticalAlignment="Top" Width="232" Visibility="Hidden">
            <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="286" VerticalAlignment="Top" Width="232">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
